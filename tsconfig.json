{
  "compilerOptions": {
    "target": "es2024",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
  ,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "src/test.ts",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}
